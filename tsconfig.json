{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": [
      "@types/node"
    ]
  },
  "include": [ "src", "script" ],
  "exclude": [ "node_modules", "dist" ]
}
